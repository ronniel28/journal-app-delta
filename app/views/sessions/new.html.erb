<div class="h-screen font-sans login bg-cover">
<div class="container mx-auto h-full flex flex-1 justify-center items-center">
    <div class="w-full max-w-lg">
      <div class="leading-loose">

      <%= form_with scope: :session, url: login_path do |form| %>
        <div class="max-w-sm m-4 p-10 bg-white bg-opacity-25 rounded shadow-xl">
            <p class="text-white font-medium text-center text-lg font-bold">LOGIN</p>
              <div class="">
              <%= form.label :email, class:"block text-sm text-white" %>
              <%= form.email_field :email, class:"w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white" %>
               
              </div>
              <div class="mt-2">
              <%= form.label :password, class:"block  text-sm text-white"%>
              <%= form.password_field :password, class:"w-full px-5 py-1 text-gray-700 bg-gray-300 rounded focus:outline-none focus:bg-white" %>
  
              </div>

              <div class="mt-4 items-center flex justify-between">
              <%= form.submit 'Log In', class:"px-4 py-1 text-white font-light tracking-wider bg-gray-900 hover:bg-gray-800 rounded" %>

              </div>
              <div class="text-center">
                <a class="inline-block right-0 align-baseline font-light text-sm text-500 hover:text-red-400">
                   <%= link_to 'No Accout Yet? Sign Up', signup_path %>
                </a>
              </div>

        </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
