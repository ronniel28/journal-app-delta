<% obj.each do |task| %>
  <!-- list component start -->
  <div
                  class="container mb-2  mx-auto w-full items-center justify-center"
                > 
                  <ul class="flex flex-col p-4">
                    <li class="border-gray-400 flex flex-row">
                      <div
                        class="select-none flex flex-1 items-center p-4 transition duration-500 ease-in-out transform hover:-translate-y-2 rounded-2xl border-2 p-6 hover:shadow-2xl border-red-400"
                      >
                        <div class="flex-1 pl-1 mr-16">
                          <div class="font-medium">
                            <%= task.description %>
                          </div>
                          <p><%= task.date %></p>
                          <p><%= task.category.description %></p>
                        </div>
                                          <div>
                        <div
                          class="my-0.5 w-full text-wrap text-center flex text-white text-bold flex-col rounded-md bg-red-500 justify-center items-center mr-10 p-2"
                        >
                          <%= link_to 'Edit', edit_task_path(task) %>
                        </div>
                                              <div
                          class="my-0.5 w-full text-wrap text-center flex text-white text-bold flex-col rounded-md bg-red-500 justify-center items-center mr-10 p-2"
                        >
                        <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Delete task?"} %>
                        </div>
                                              </div>
                      </div>
                    </li>
                    
                    
                  </ul>
                </div>
  
                              <!-- list component end -->

            
  <% end %>
  
  <%= link_to 'Add task', new_task_path %>
  
