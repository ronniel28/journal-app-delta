


  <% @task.errors.any? %>
  <ul>
    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
    <div class="bg-gray-600 rounded shadow p-6 m-4 w-full lg:w-3/4 lg:max-w-lg md:max-w-2xl">
      <div class="mb-4">
        <h1 class="text-white">Todo List</h1>
        <%= form_with model: @task do |form| %>
        <div class="flex-col mt-4">
        <%= form.text_field :description, placeholder:"Add Todo", class:"border border-gray-800 focus:border-blue-500 rounded w-full py-2 px-3 mr-4 text-black" %>
        <%= form.text_field :date, class:"border border-gray-800 focus:border-blue-500 rounded w-full py-2 px-3 mr-4 text-black" %>
        <%= form.select :category_id, current_user.categories.map {|c| [c.description, c.id]}, class:"border border-gray-800 focus:border-blue-500 rounded w-full py-2 px-3 mr-4 text-black" %>  
          <%= form.submit '+',class: "p-0 w-12 h-10 bg-gray-500 rounded-full hover:bg-gray-400 active:shadow-lg mouse shadow transition ease-in duration-200 focus:outline-none" %>
    
        </div>
      </div>
      <% end %>
      <!-- Completed -->
    </div>
    
    <!-- End of file -->
